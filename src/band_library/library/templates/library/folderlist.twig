{% extends "library/baseprint.twig" %}
{% load band_tags %}
{% load static %}
{% block styles %}
    <style type="text/css">
        table.indexcols tbody {
            vertical-align: top;
        }
        table.folder {
            width: 100%;
        }
        .folder td {
            border: 1px solid black;
        }

        table.indexcols td.folder, table.indexcols td.sidebar {
            width: 45%;
            padding-right: 2em;
        }
        div.column {
            display: inline-block;
            width: 45%;
            vertical-align: top;
        }
        div.column.right {
            margin-left: 16px;
            margin-top: 18pt; /* track TH font size */
        }
        table.folder td, table.folder th {
            font-size: 16pt;
        }
        
        body {
            margin-left: 16px;
        }
        
        @media print {
            @page {
                size: 210mm 297mm;
                margin-top: 0;
                margin-left: 0;
            }
            body {
                margin-left: 0;
                max-width: 210mm;
            }
            body, div.column {
                transform: scale(0.9);
            }
            .devsys, #nav {
                display: none;
            }
            table.heading td {
                /* transform: scale(0.8); */
            }
            table.folder td, table.folder th {
                font-size: 14pt;
            }
            h1 {
                font-size: 3rem;  
            } 
            div.breakpage {
                break-after: page;
            }
            table.indexcols td.sidebar {
                transform: scale(0.7);
                
            }
            
        }
        

    </style>
{% endblock %}
{% block title %}
    <title>Folder: {{folder.label}}</title>
{% endblock %}
{% block main %}
    <div class='row' id='nav'>
        <h3 class='col-md-4'><a href='/'>HOME</a></h3>
    </div>
    <table class="heading">
        <tbody>
            <tr>
                <td><img src="{% static 'apple-touch-icon.png' %}"></td>
                <td><h1>{{ folder.label }}</h1></td>
            </tr>
            <tr>
                <td colspan="2"><h2>Numeric List ({{ folder.issue_date}})</h2></td>
            </tr>
        </tbody>
    </table>

{#    <div class="column left">#}
<table class="indexcols">
    <tr>
        <td class="folder">
            <table class="folder">
                <tr>
                    <th>Page</th><th>Title</th>
                </tr>
                {% for pos, slot in folder.numeric.items %}
                    <tr>
                        {# <td>{{ pos }}</td><td>{% if slot %}{{ slot }}{% else %}EMPTY{% endif %}</td> #}

                        {% if slot %}
                        <td>{{ slot.position }}</td>
                        <td>{{ slot.item|totitle }}</td>
                        {#<td>{{ slot.version }}</td>#}
                        {% elif false %}
                        <td>{{ pos }}</td>
                        <td>&nbsp;</td>
                        {#<td>&nbsp;</td>#}
                        {% endif %}

                    </tr>
                {% endfor %}
            </table>
        </td>
        <td class="sidebar">
{#    </div>#}
{#    <div class="column right">#}
        {{ folder.sidebar|safe }}
{#    </div>#}
        </td>
</tr>
</table>
<div class='breakpage'></div>
<table class="heading">
    <tbody>
        <tr>
            <td><img src="{% static 'apple-touch-icon.png' %}"></td>
            <td><h1>{{ folder.label }}</h1></td>
            <tr>
            <td colspan="2"><h2>Alphabetic List ({{ folder.issue_date}})</h2></td>
        </tr>
    </tbody>
</table>
<table class="indexcols">
    <tr>
        <td class="folder">
            <table class="folder">
                <tr>
                    <th>Title</th><th>Page</th>
                </tr>
                {% for slot in folder.alphabetic %}
                    <tr>
                        <td>{{ slot.item|totitle }}</td>
                        <td>{{ slot.position }}</td>
                        {#<td>{{ slot.version }}</td>#}
                    </tr>
                {% endfor %}
            </table>
        </td>
        <td class="sidebar">
        {{ folder.sidebar|safe }}
        </td>
    </tr>
</table>
{% endblock %}
